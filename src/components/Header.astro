---
import logotype from "../assets/logo.png";
import TopMenuLink from "./TopMenuLink.astro";
---

<astro-header class="lg:sticky lg:top-0 bg-[#f5f4ef] block z-10">
  <header class="flex items-center justify-between py-2">
    <div class="flex items-center justify-center gap-2 2xl:min-w-[210px]">
      <img src={logotype.src} alt="Руками трогать" />
      <span class="whitespace-nowrap font-semibold">Руками Трогать</span>
    </div>
    <nav class="lg:flex-1">
      <ul
        role="menubar"
        aria-label="Основные разделы на странице"
        class="fixed top-0 left-full z-10 bg-[#f5f4ef] text-center transition-left w-full h-full flex items-center justify-center flex-col font-semibold lg:static lg:flex-row lg:pl-16 lg:gap-1 2xl:gap-10"
      >
        <li role="none" class="mb-1 lg:mb-0">
          <TopMenuLink href="/#about" title="О нас" />
        </li>
        <li role="none" class="mb-1 lg:mb-0">
          <TopMenuLink
            href="/postanovka-diagnoza"
            title="Постановка диагноза"
          />
        </li>
        <li role="none" class="mb-1 lg:mb-0">
          <TopMenuLink href="/operacija-i-lecheie" title="Операция и лечение" />
        </li>
        <li role="none" class="mb-1 lg:mb-0">
          <TopMenuLink
            href="/zhizn-posle-remissija"
            title="Жизнь после и ремиссия"
          />
        </li>
        <li
          role="none"
          class="flex items-center justify-center xl:min-w-[210px] 2xl:justify-end"
        >
          <a
            href="https://www.instagram.com/rykamitrogat/"
            role="menuitem"
            title="Инстаграм Руками трогать"
            class="inline-block p-1"
          >
            <svg
              class="t-sociallinks__svg"
              width="30px"
              height="30px"
              viewBox="0 0 100 100"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M50 100C77.6142 100 100 77.6142 100 50C100 22.3858 77.6142 0 50 0C22.3858 0 0 22.3858 0 50C0 77.6142 22.3858 100 50 100ZM25 39.3918C25 31.4558 31.4566 25 39.3918 25H60.6082C68.5442 25 75 31.4566 75 39.3918V60.8028C75 68.738 68.5442 75.1946 60.6082 75.1946H39.3918C31.4558 75.1946 25 68.738 25 60.8028V39.3918ZM36.9883 50.0054C36.9883 42.8847 42.8438 37.0922 50.0397 37.0922C57.2356 37.0922 63.0911 42.8847 63.0911 50.0054C63.0911 57.1252 57.2356 62.9177 50.0397 62.9177C42.843 62.9177 36.9883 57.1252 36.9883 50.0054ZM41.7422 50.0054C41.7422 54.5033 45.4641 58.1638 50.0397 58.1638C54.6153 58.1638 58.3372 54.5041 58.3372 50.0054C58.3372 45.5066 54.6145 41.8469 50.0397 41.8469C45.4641 41.8469 41.7422 45.5066 41.7422 50.0054ZM63.3248 39.6355C65.0208 39.6355 66.3956 38.2606 66.3956 36.5646C66.3956 34.8687 65.0208 33.4938 63.3248 33.4938C61.6288 33.4938 60.2539 34.8687 60.2539 36.5646C60.2539 38.2606 61.6288 39.6355 63.3248 39.6355Z"
                fill="#000000"></path></svg
            >
          </a>
        </li>
      </ul>
    </nav>
    <button class="tham tham-e-squeeze tham-w-6 z-10 relative lg:hidden">
      <div class="tham-box">
        <div class="tham-inner"></div>
      </div>
    </button>
  </header>
</astro-header>

<script>
  class AstroHeader extends HTMLElement {
    connectedCallback() {
      const button = this.querySelector("button");
      const nav = this.querySelector("ul");
      const body = document.body;

      button?.addEventListener("click", () => {
        button.classList.toggle("tham-active");
        nav?.classList.toggle("left-0");
        nav?.classList.toggle("left-full");
        body.classList.toggle("overflow-hidden");
      });
    }
  }

  customElements.define("astro-header", AstroHeader);
</script>
